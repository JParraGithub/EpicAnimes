# PayPal configuration

# Mode: "live" to charge real money, or "sandbox" for testing.
PAYPAL_MODE=live

# Your REST API credentials from PayPal Developer → Apps & Credentials (LIVE app).
PAYPAL_CLIENT_ID=your_live_client_id_here
PAYPAL_CLIENT_SECRET=your_live_client_secret_here

# Store currency (display/pricing). CLP is supported as zero‑decimal.
# Change if your store uses another currency (e.g., USD, EUR).
PAYPAL_CURRENCY=CLP

# Currency to actually charge at PayPal. Usually same as PAYPAL_CURRENCY.
# If PayPal requires charging in another currency (e.g., USD), set it here and
# provide a conversion rate below.
# PAYPAL_ORDER_CURRENCY=USD

# Conversion rate: how many CLP is 1 USD (only used when ORDER currency != store currency).
# Example: if 1 USD ≈ 950 CLP, set 950. Leave at 1 when currencies match.
# PAYPAL_CONVERSION_RATE=950

# Advanced: override API base (leave empty; used only for custom testing endpoints)
# PAYPAL_API_BASE=

# Django email configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_SSL=False
EMAIL_USE_TLS=True

# Database configuration
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306
DB_ENGINE=django.db.backends.mysql
RENDER_EXTERNAL_HOSTNAME=
